<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MyQuestionActivity"
    tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:minLines="2"
        android:text="标题类容（我自己发布的问题）"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:id="@+id/bt_HowManyAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="XXX人回答了这个问题"
        android:textSize="20dp"
        android:gravity="left"


        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_EditQuestion"
        app:layout_constraintTop_toBottomOf="@+id/tv_Title"
        app:layout_constraintHorizontal_weight="3"
        />

    <Button
        android:id="@+id/bt_EditQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑问题"
        android:textSize="15dp"

        android:layout_marginTop="5dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/bt_HowManyAnswer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Title" />



    <LinearLayout
        android:id="@+id/linearLayoutUser"
        app:layout_constraintTop_toBottomOf="@id/bt_EditQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">



        <ImageButton
            android:id="@+id/ib_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/head"
            />

        <TextView
            android:id="@+id/tv_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="问题描述"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutUser"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />









</androidx.constraintlayout.widget.ConstraintLayout>