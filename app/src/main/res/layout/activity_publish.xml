<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints" >

    <EditText
        android:id="@+id/et_publishTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入问题并以问号结尾"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/et_publishDescribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="对问题补充说明，可以更快获得解答"
        android:gravity="top"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/et_publishTitle"
        android:layout_marginTop="5dp"
        android:minLines="15"
        android:maxLines="20"
        />

    <Button
        android:id="@+id/bt_checkPublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:background="@color/blue"
        app:layout_constraintTop_toBottomOf="@+id/et_publishDescribe"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>