<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/tv_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号注册"
        android:textSize="40sp"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

<!--    手机号-->
    <TextView
        android:id="@+id/tv_PhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:textSize="30sp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/tv_Register" />

    <EditText
        android:id="@+id/et_PhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:maxLines="1"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_Register"
        app:layout_constraintLeft_toRightOf="@id/tv_PhoneNumber"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1" />
<!--        app:layout_constraintBaseline_toBaselineOf="@+id/tv_PhoneNumber"-->






<!--    验证码-->
<!--    暂时当邮箱用-->
    <TextView
        android:id="@+id/tv_Email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="邮箱"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/tv_PhoneNumber" />


    <!--    用户名-->
    <EditText
        android:id="@+id/et_Email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"

        android:layout_marginRight="10dp"
        android:hint="请输入你的邮箱"
        android:maxLines="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/tv_PhoneNumber"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_PhoneNumber" />

    <TextView
        android:id="@+id/tv_UserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/tv_Email" />

    <EditText
        android:id="@+id/et_UserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="设置用户名"
        android:maxLines="1"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_Email"
        app:layout_constraintLeft_toRightOf="@id/tv_PhoneNumber"
        app:layout_constraintRight_toRightOf="parent" />

<!--    设置密码-->
    <TextView
        android:id="@+id/tv_Password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/tv_UserName" />

    <EditText
        android:id="@+id/et_Password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="设置密码"
        android:maxLines="1"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_UserName"
        app:layout_constraintLeft_toRightOf="@id/tv_PhoneNumber"
        app:layout_constraintRight_toRightOf="parent" />

    <!--    确认密码-->
    <TextView
        android:id="@+id/tv_VerifiPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/tv_Password" />

    <EditText
        android:id="@+id/et_VerifiPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="再输入一遍密码"
        android:maxLines="1"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_Password"
        app:layout_constraintLeft_toRightOf="@id/tv_UserName"
        app:layout_constraintRight_toRightOf="parent" />


<!--    注册提交按钮-->
    <Button
        android:id="@+id/bt_VerifiRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认注册"
        android:textSize="30sp"

        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_VerifiPassword"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
