<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">


    <TextView
        android:id="@+id/tv_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号注册"
        android:textSize="40sp"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

<!--    手机号-->
    <TextView
        android:id="@+id/tv_PhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:textSize="30sp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/tv_Register" />

    <EditText
        android:id="@+id/et_PhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:maxLines="1"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_Register"
        app:layout_constraintLeft_toRightOf="@id/tv_PhoneNumber"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1" />
<!--        app:layout_constraintBaseline_toBaselineOf="@+id/tv_PhoneNumber"-->






<!--    验证码-->
    <TextView
        android:id="@+id/tv_VerificationCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="验证码"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/tv_PhoneNumber" />

    <EditText
        android:id="@+id/et_VerificationCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入验证码"
        android:maxLines="1"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_PhoneNumber"
        app:layout_constraintLeft_toRightOf="@id/tv_PhoneNumber"
        app:layout_constraintRight_toRightOf="parent" />



<!--    用户名-->
    <TextView
        android:id="@+id/tv_UserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/tv_VerificationCode" />

    <EditText
        android:id="@+id/et_UserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="设置用户名"
        android:maxLines="1"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_VerificationCode"
        app:layout_constraintLeft_toRightOf="@id/tv_PhoneNumber"
        app:layout_constraintRight_toRightOf="parent" />

<!--    设置密码-->
    <TextView
        android:id="@+id/tv_Passport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/tv_UserName" />

    <EditText
        android:id="@+id/et_Passport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="设置密码"
        android:maxLines="1"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_UserName"
        app:layout_constraintLeft_toRightOf="@id/tv_PhoneNumber"
        app:layout_constraintRight_toRightOf="parent" />

    <!--    确认密码-->
    <TextView
        android:id="@+id/tv_VerifiPassport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/tv_Passport" />

    <EditText
        android:id="@+id/et_VerifiPassport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="再输入一遍密码"
        android:maxLines="1"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_Passport"
        app:layout_constraintLeft_toRightOf="@id/tv_UserName"
        app:layout_constraintRight_toRightOf="parent" />


<!--    注册提交按钮-->
    <Button
        android:id="@+id/bt_VerifiRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认注册"
        android:textSize="30sp"

        android:layout_marginTop="50dp"
        android:layout_marginRight="200dp"
        app:layout_constraintTop_toBottomOf="@id/tv_VerifiPassport"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
