<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"

        android:text="震惊66666666666"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/im_head"
        android:layout_width="40dp"
        android:layout_height="40dp"


        android:src="@drawable/head"

        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Title"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"



        app:layout_constraintCircle="@+id/im_head"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="40dp"
        />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        android:text="babbababbababbabababbabababbabbabab"

        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/im_head"

        />


</androidx.constraintlayout.widget.ConstraintLayout>