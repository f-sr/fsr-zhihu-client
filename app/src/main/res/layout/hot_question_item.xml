<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:layout_marginTop="20dp"

    >

    <TextView
        android:id="@+id/tvRank"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/hotrank"
        android:gravity="center"
        android:text="1"

        android:textColor="@color/white"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:textColor="@color/black"
        android:textSize="25dp"
        android:maxLines="2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvRank"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/im_head"
        android:layout_width="30dp"
        android:layout_height="30dp"


        android:src="@drawable/head"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_Title"
        app:layout_constraintLeft_toRightOf="@+id/tvRank"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="李四"
        android:textColor="@color/gray"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@+id/im_head"
        app:layout_constraintTop_toBottomOf="@+id/tv_Title"
        />




    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:minLines="2"
        android:text=""
        android:textColor="@color/dimgray"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/tvRank"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/im_head" />

    <TextView
        android:id="@+id/tvViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text=""

        android:textColor="@color/darkgray"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toRightOf="@+id/tvRank"
        app:layout_constraintTop_toBottomOf="@+id/tv_describe"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tvAnswersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="回答"

        android:textColor="@color/darkgray"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toRightOf="@+id/tvViews"
        app:layout_constraintTop_toBottomOf="@+id/tv_describe"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@+id/tvHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text=""

        android:textColor="@color/darkgray"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toRightOf="@+id/tvAnswersCount"
        app:layout_constraintTop_toBottomOf="@+id/tv_describe"
        app:layout_constraintBottom_toBottomOf="parent"
        />






</androidx.constraintlayout.widget.ConstraintLayout>